---
import _featuredVideo from '../data/featuredVideo.json';
interface FeaturedVideo {
    [key: number]: {
        title: string;
        subtitle: string;
        description: string;
        src: string;
    }
}
const featuredVideo = _featuredVideo as FeaturedVideo;

let title!: string, subtitle!: string, description!: string, src!: string, uploadDate!: string;
for (const vid in featuredVideo) {
    title = featuredVideo[vid].title;
    subtitle = featuredVideo[vid].subtitle;
    description = featuredVideo[vid].description;
    src = featuredVideo[vid].src;
}
---
<div class="video-container">
    <iframe class="video-iframe" src={src} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>
<span class="title">{title}</span><br>
<span class="subtitle">{subtitle}</span><br>
<p class="description">{description}</p>

<style lang="scss">
    .video {
        &-container {
            width: 100%;
            margin: auto;
            aspect-ratio: 16 / 9;
        }
        &-iframe {
            display: block;
            width: 100%;
            height: 100%;
            box-shadow: 0 0 1em black;
        }
    }
    .title {
        font-size: 2.5rem;
        text-shadow: 0 0 0.25em black, 0 0 0.125em black;
        color: white;
    }
    .subtitle {
        font-size: 1.75rem;
        text-shadow: 0 0 0.25em black, 0 0 0.125em black;
        color: white;
    }
    .description {
        font-size: 1.25rem;
        text-shadow: 0 0 0.25em black, 0 0 0.125em black;
        color: white;
    }
</style>
