---
import { getImage } from 'astro:assets';

interface Props {
   filePath: string;
}

import image from '../assets/img/avatar/kival_evan.jpg';
import Image from 'astro/components/Image.astro';

const { filePath } = Astro.props;

---

<Image alt="avatar" src={image} class="avatar" width=256 height=256 />

<style lang="scss">
   .avatar {
      width: 100%;
      height: auto;
      box-shadow: -0.125rem 0.125rem 0.25rem #0008;
      border-radius: 50%;
   }
</style>
