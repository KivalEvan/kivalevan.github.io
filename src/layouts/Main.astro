---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackToTopButton from '../components/BackToTopButton.astro';

interface PageDetails {
   title: string;
   titleAdditional?: string;
   subtitle?: string;
   browserTitle?: string;
   noSubtitle?: boolean;
   description: string;
   overrideTitle?: boolean;
}

interface Props {
   pageDetails: PageDetails;
}

const { pageDetails } = Astro.props;
---

<BaseLayout pageDetails={pageDetails}>
   <div class="full-page">
      <Header pageDetails={pageDetails} />
      <main>
         {
            pageDetails.subtitle && !pageDetails.noSubtitle ? (
               <div class="wrapper readable">
                  <h2>|| {pageDetails.subtitle}</h2>
               </div>
            ) : null
         }
         <slot />
      </main>
      <BackToTopButton />
      <Footer />
   </div>
</BaseLayout>
